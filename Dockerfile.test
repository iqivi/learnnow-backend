# Test container with Maven
FROM maven:3.9-eclipse-temurin-17

WORKDIR /app

# Copy pom.xml first for dependency caching
COPY pom.xml .

# Download ALL dependencies including test scope
RUN mvn dependency:go-offline -B -DdownloadSources=false -DdownloadJavadocs=false

# Copy source code
COPY src ./src

# Run tests by default
CMD ["mvn", "test", "-B"]
